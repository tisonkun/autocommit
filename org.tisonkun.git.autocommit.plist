<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>KeepAlive</key>
	<true/>
	<key>Label</key>
	<string>org.tisonkun.git.autocommit</string>
	<key>ProgramArguments</key>
	<array>
		<string>/path/to/autocommit.py</string>
		<string>-d</string>
        <string>/path/to/directory</string>
        <!-- optional more directories -->
        <!-- <string>-d</string> -->
        <!-- <string>/path/to/directory</string> -->
        <!-- optional interval (default: 30 seconds) -->
        <!-- <string>-i</string> -->
        <!-- <string>interval-in-seconds</string> -->
	</array>
	<key>RunAtLoad</key>
	<true/>
	<key>StandardErrorPath</key>
	<string>/usr/local/var/log/autocommit.log</string>
	<key>StandardOutPath</key>
	<string>/usr/local/var/log/autocommit.log</string>
	<key>WorkingDirectory</key>
	<string>/usr/local/var</string>
</dict>
</plist>
